{
  /* general */
  "coc.preferences.formatOnSave": true,
  "colors.enable": true,
  /* diagnostics */
  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.errorSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "",
  /* list */
  "list.insertMappings": {
    "<C-a>": "do:selectall",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k",
    "<down>": "prompt:next",
    "<space>": "do:toggle",
    "<up>": "prompt:previous"
  },
  "list.normalMappings": {
    "<C-a>": "do:selectall",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k",
    "<space>": "do:toggle"
  },
  /* outline */
  "outline.previewBorderHighlightGroup": "FloatBorder",
  "outline.splitCommand": "topleft 30vs",
  /* tree */
  "tree.closedIcon": "",
  "tree.openedIcon": "",
  /* auto complete menu */
  "suggest.completionItemKindLabels": {
    "class": "ﴯ",
    "color": "",
    "constant": "",
    "constructor": "⌘",
    "enum": "",
    "enumMember": "",
    "event": "",
    "field": "ﰠ",
    "file": "",
    "folder": "",
    "function": "",
    "interface": "I",
    "keyword": "",
    "method": "",
    "module": "",
    "operator": "",
    "property": "",
    "reference": "",
    "snippet": "",
    "struct": "פּ",
    "text": "",
    "typeParameter": "",
    "unit": "塞",
    "value": "",
    "variable": ""
  },
  /* float windows */
  "dialog.floatBorderHighlight": "FloatBorder",
  "dialog.rounded": false,
  "floatFactory.floatConfig": {
    "border": true,
    "rounded": false,
    "borderhighlight": "FloatBorder",
    "highlight": "CocFloating"
  },
  "suggest.floatConfig": {
    "border": true,
    "borderhighlight": "FloatBorder"
  },
  /* additional servers */
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["dockerfile", "lua", "sh", "text", "yaml"]
    }
  },
  /* coc-eslint */
  "eslint.autoFixOnSave": true,
  "eslint.format.enable": true,
  /* coc-prettier */
  "prettier.proseWrap": "always",
  /* coc-snippets */
  "snippets.extends": {
    "javascript": ["javascript"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"],
    "typescriptreact": ["javascript", "javascriptreact"]
  },
  "snippets.textmateSnippetsRoots": ["~/.config/nvim/snippets/"],
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets/"
}

// vim: filetype=jsonc
