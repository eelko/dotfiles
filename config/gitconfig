[core]
  editor = vim
[diff]
  tool = vimdiff
[alias]
  ci = commit -v
  co = checkout
  dc = diff --cached
  df = diff
  st = status -sb
  lg = log --graph --abbrev-commit --pretty=format:'%C(yellow)%h%Creset |%C(bold red)%d%Creset %s %Cgreen(%ar) %C(cyan)<%an>%Creset'
  wc = !git whatchanged -1 $1
  changed-files = !git whatchanged $1 -1 | grep '^:' | awk '{print $NF}'
  conflicted-files = !git ls-files --unmerged | cut -f2 | sort -u
  count-commits = !git log --color=always -z | perl -ln0e 'print unless /git-svn-id/' | grep 'commit' | wc -l | sed 's/ //g'
  dcommit-dry-run = !git svn dcommit --dry-run | sed 1d | awk '{print $3}' | xargs git whatchanged --no-walk
[color]
  branch = auto
  diff = auto
  interactive = auto
  show = auto
  status = auto
[svn]
  rmdir = true # push empty directory removals back to svn as directory deletes
[credential]
  helper = osxkeychain
[push]
  default = nothing
